{
    "remote.SSH.defaultExtensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "twxs.cmake"
    ],
    "remote.SSH.lockfilesInTmp": true,
    "gitlab.instanceUrl": "https://gitlab.cern.ch",
    "python.defaultInterpreterPath": "${workspaceFolder}/build/ide_python",
    "python.envFile": "${workspaceFolder}/build/env.txt",
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Path": "${workspaceFolder}/build/ide_autopep8",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "${workspaceFolder}/build/ide_flake8",
    "python.linting.flake8Args": [
        "--isolated",
        "--select=ATL,F,E101,E7,E9,W6", // note that equals sign is required by VS Code
        "--ignore=E701,E702,E704,E741",
        "--enable-extensions=ATL902"
    ],
    "python.analysis.extraPaths": [
        "${workspaceFolder}/build/x86_64-centos7-gcc11-opt/python"
    ],
    "cmake.configureOnOpen": false,
    "files.associations": {
        "*.icc": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "*.ipp": "cpp",
        "condition_variable": "cpp",
        "thread": "cpp",
        "any": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "strstream": "cpp",
        "*.tcc": "cpp",
        "cfenv": "cpp",
        "charconv": "cpp",
        "chrono": "cpp",
        "codecvt": "cpp",
        "complex": "cpp",
        "cstdint": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "map": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "ratio": "cpp",
        "regex": "cpp",
        "set": "cpp",
        "source_location": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "fstream": "cpp",
        "future": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "shared_mutex": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "cinttypes": "cpp",
        "typeindex": "cpp",
        "typeinfo": "cpp",
        "valarray": "cpp",
        "variant": "cpp"
    },
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",
}
